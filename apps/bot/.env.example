# Public URL of this bot service (Railway domain). Required for bootstrap.
BOT_PUBLIC_URL=https://your-bot.up.railway.app

# Shared secret expected on webhook requests (sent by Evolution as a custom header)
BOT_WEBHOOK_SECRET=change_me

# Admin token for calling /admin/* endpoints
BOT_ADMIN_TOKEN=change_me

# Evolution API
EVOLUTION_API_URL=https://your-evolution.up.railway.app
EVOLUTION_API_KEY=your_global_apikey
EVOLUTION_INSTANCE=sector7

# Bot behaviour
BOT_INBOUND_ONLY=true
BOT_COOLDOWN_MS=1000

# Humanizer (debounce + typing delay)
# Aggregate messages for this window before replying
BOT_HUMANIZER_MIN_MS=2500
BOT_HUMANIZER_MAX_MS=4000
# Base "thinking/typing" delay range before sending the reply
BOT_DELAY_BASE_MIN_MS=800
BOT_DELAY_BASE_MAX_MS=2500
# Extra delay per character in the outgoing reply
BOT_DELAY_PER_CHAR_MIN_MS=20
BOT_DELAY_PER_CHAR_MAX_MS=60
# Cooldown to avoid repeating the same fallback/reply (default 5 min)
BOT_FALLBACK_COOLDOWN_MS=300000
# Admin/test numbers (comma-separated). If set, the bot will ignore them.
BOT_TEST_NUMBERS=

# Reply splitting (optional)
BOT_SPLIT_REPLIES=false
BOT_SPLIT_REPLIES_PROB=0.25

# Debug logs
DEBUG_WEBHOOKS=false

# Optional catalog source (JSON array). If empty, uses sample catalog.
# JSON shape: [{"id":"...","name":"PS5","priceArs":123,"url":"...","image":"..."}]
CATALOG_JSON_URL=

# Catalog perf knobs (optional)
CATALOG_CACHE_TTL_MS=300000
CATALOG_FETCH_TIMEOUT_MS=4000

# Evolution API timeout (optional)
EVOLUTION_FETCH_TIMEOUT_MS=8000

# Postgres (Railway provides DATABASE_URL automatically if you add Postgres)
DATABASE_URL=postgresql://user:pass@host:5432/db
