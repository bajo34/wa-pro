NODE_ENV=
BACKEND_URL=http://localhost
FRONTEND_URL=http://localhost:3000
PROXY_PORT=8080
PORT=8080

DB_DIALECT=
DB_HOST=
DB_USER=
DB_PASS=
DB_NAME=

JWT_SECRET=
JWT_REFRESH_SECRET=

# ================================
# WhatsApp Provider (MVP Pro)
# ================================
# Set to EVOLUTION to use Evolution API as the WhatsApp provider.
WHATSAPP_PROVIDER=EVOLUTION

# Evolution API base URL (Railway service URL)
EVOLUTION_API_URL=

# Evolution API key (AUTHENTICATION_API_KEY)
EVOLUTION_API_KEY=

# Shared secret to validate inbound webhooks (header x-evolution-secret or ?token=)
EVOLUTION_WEBHOOK_SECRET=

# Poll interval (ms) to keep QR/state updated in the panel
EVOLUTION_POLL_MS=3000

# Optional fallback instance name (if Whatsapp.name is empty)
EVOLUTION_INSTANCE=
