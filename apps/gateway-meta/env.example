# --- Gateway Meta (Instagram + Facebook) ---
PORT=3000

# Webhooks
# 1) Set META_VERIFY_TOKEN in Meta App > Webhooks subscription verify token
# 2) Use META_APP_SECRET to validate X-Hub-Signature-256
META_VERIFY_TOKEN=dev_meta_verify_123456
META_APP_SECRET=dev_meta_app_secret_1234567890

# Admin endpoints protection (X-Admin-Token header)
META_ADMIN_TOKEN=dev_admin_token_123456

# Graph API (Meta)
META_GRAPH_VERSION=v24.0
META_PAGE_ID=123456789012345
META_PAGE_ACCESS_TOKEN=EAAB...
IG_BUSINESS_ACCOUNT_ID=17841400000000000

# DB (same Postgres where public.vehicles exists)
DATABASE_URL=postgresql://postgres:pass@host:5432/db?sslmode=require

# Optional: restrict to a single dealership (uuid)
# CATALOG_DEALERSHIP_ID=00000000-0000-0000-0000-000000000000

# Behavior
META_VALIDATE_SIGNATURE=true
# Keywords that trigger "public reply + DM" flow
META_KEYWORDS=info,precio,financiacion,financiaciÃ³n,cuotas,plan,stock,disponible

# Optional base URL for building links from vehicle.slug
# Example: https://tusitio.com/autos
# PUBLIC_CATALOG_BASE_URL=https://tusitio.com/autos

# Optional (quick MVP mapping without DB): JSON map media_id -> vehicle_uuid
# META_PUBLICATION_MAP_JSON={"17912345678900000":"00000000-0000-0000-0000-000000000001"}
